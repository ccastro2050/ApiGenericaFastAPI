# ================================================================
# .env.example — Plantilla de configuración
#
# INSTRUCCIONES:
# 1. Copia este archivo como .env
# 2. Completa los valores con tu configuración real
# 3. Para desarrollo, crea también .env.development
# ================================================================

# ----------------------------------------------------------------
# ENTORNO
# ----------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# ----------------------------------------------------------------
# JWT - Configuración de autenticación
# ----------------------------------------------------------------
JWT_KEY=TU_CLAVE_SECRETA_MINIMO_32_CARACTERES
JWT_ISSUER=MyApp
JWT_AUDIENCE=MyAppUsers
JWT_DURACION_MINUTOS=60

# ----------------------------------------------------------------
# SEGURIDAD
# ----------------------------------------------------------------
TABLAS_PROHIBIDAS=

# ----------------------------------------------------------------
# BASE DE DATOS
# ----------------------------------------------------------------
# Valores: sqlserver, postgres, mysql, mariadb
DB_PROVIDER=sqlserver

# Cadenas de conexión (completa según tu proveedor)
DB_SQLSERVER=Server=TU_SERVIDOR;Database=TU_BD;User Id=usuario;Password=password;TrustServerCertificate=True;
DB_POSTGRES=Host=localhost;Port=5432;Database=TU_BD;Username=postgres;Password=TU_PASSWORD;
DB_MYSQL=Server=localhost;Port=3306;Database=TU_BD;User=root;Password=TU_PASSWORD;CharSet=utf8mb4;
DB_MARIADB=Server=localhost;Port=3306;Database=TU_BD;User=root;Password=TU_PASSWORD;
