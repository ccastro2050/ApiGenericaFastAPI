# ================================================================
# .env.example — Plantilla de configuración
#
# INSTRUCCIONES:
# 1. Copia este archivo como .env
# 2. Completa los valores con tu configuración real
# 3. Para desarrollo, crea también .env.development
# ================================================================

# ----------------------------------------------------------------
# ENTORNO
# ----------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# ----------------------------------------------------------------
# JWT - Configuración de autenticación
# ----------------------------------------------------------------
JWT_KEY=TU_CLAVE_SECRETA_MINIMO_32_CARACTERES
JWT_ISSUER=MyApp
JWT_AUDIENCE=MyAppUsers
JWT_DURACION_MINUTOS=60

# ----------------------------------------------------------------
# SEGURIDAD
# ----------------------------------------------------------------
TABLAS_PROHIBIDAS=

# ----------------------------------------------------------------
# BASE DE DATOS
# ----------------------------------------------------------------
# Valores: sqlserver, sqlserverexpress, localdb, postgres, mysql, mariadb
DB_PROVIDER=sqlserver

# ----------------------------------------------------------------
# CADENAS DE CONEXIÓN
# NOTA: Cada driver tiene su formato específico
# ----------------------------------------------------------------

# SQL Server (formato ODBC)
# FORMATO: Driver={ODBC Driver 17 for SQL Server};Server=...;Database=...;UID=...;PWD=...;
# Para Windows Auth: usar Trusted_Connection=yes en lugar de UID/PWD
DB_SQLSERVER=Driver={ODBC Driver 17 for SQL Server};Server=TU_SERVIDOR;Database=TU_BD;UID=usuario;PWD=password;TrustServerCertificate=yes;

# SQL Server Express (formato ODBC)
DB_SQLSERVEREXPRESS=Driver={ODBC Driver 17 for SQL Server};Server=localhost\SQLEXPRESS;Database=TU_BD;Trusted_Connection=yes;TrustServerCertificate=yes;

# SQL Server LocalDB (formato ODBC - solo desarrollo)
DB_LOCALDB=Driver={ODBC Driver 17 for SQL Server};Server=(localdb)\MSSQLLocalDB;Database=TU_BD;Trusted_Connection=yes;TrustServerCertificate=yes;

# PostgreSQL (formato SQLAlchemy asyncpg URL)
# FORMATO: postgresql+asyncpg://usuario:password@host:puerto/database
DB_POSTGRES=postgresql+asyncpg://postgres:TU_PASSWORD@localhost:5432/TU_BD

# MySQL (formato aiomysql - soporta formato C#)
# FORMATO: Server=host;Port=port;Database=db;User=user;Password=pass;
DB_MYSQL=Server=localhost;Port=3306;Database=TU_BD;User=root;Password=TU_PASSWORD;CharSet=utf8mb4;

# MariaDB (formato aiomysql - soporta formato C#)
DB_MARIADB=Server=localhost;Port=3306;Database=TU_BD;User=root;Password=TU_PASSWORD;
